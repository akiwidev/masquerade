<body style="background-color: #1A1423">
  <nav class="navbar navbar-light bg-primary">
    <%= link_to((events_path), class: "text-decoration-none purple-font") do %>
      <i class="fas fa-arrow-left"></i>
    <% end %>
    <%= link_to "Guest list", event_guests_path(@event), class: "purple-font text-decoration-none" %>
  </nav>
  <div style="background-image: linear-gradient(rgba(0,0,0,0.4),rgba(0,0,0,0.4)), url(<%= image_path(@event.image_url) %>); background-size: cover" class="banner mb-3"></div>
  <div class="container">
    <h1 class="poiret-font lavender-font border-bottom border-primary py-2"><%= @event.name %></h1>
    <p class="poiret-font lavender-font">Event type: <%= @event.event_type %></p>
    <p class="lato-font light-lavender-font mt-3 text-justify"><%= @event.description%></p>
    <p class="lato-font light-lavender-font">Limited to: <%= @event.max_attendees %> guests</p>
    <%= link_to "Add guest", new_event_guest_path(@event), class: "purple-font text-decoration-none btn btn-primary mt-3"%>
  </div>
</body>
