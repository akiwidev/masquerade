<body style="background-color: #1A1423">
  <nav class="navbar navbar-light bg-primary mb-3">
    <%= link_to((root_path), class: "text-decoration-none purple-font") do %>
      <i class="fas fa-arrow-left"></i>
    <% end %>
    <%= link_to "New event", new_event_path, class: "text-decoration-none purple-font" %>
  </nav>
  <div class="container">
    <h1 class="poiret-font lavender-font border-bottom border-primary py-2">Events</h1>
    <div class="record_wrap">
      <% @events.each do |event| %>
        <section class="record">
          <div id="record1" class="record-display">
          </div>
          <div class="record-desc">
            <h1><%= event.name %></h1>
            <p><%= event.event_type %></p>
            <%= link_to "More info", event_path(event), class: "text-decoration-none" %>
          </div>
        </section>
      <% end %>
    </div>
  </div>
</body>
